{
    "manifest_version":2,
    "name":"EH History",
    "short_name":"ehhistory",
    "description":"EH history",
    "version":"0.0.0",
    "homepage_url":"https://github.com/risonakamo/ehhistory",

    "permissions":[
        "tabs",
        "storage",
        "downloads",
        "https://nhentai.net/g/*",
        "https://imgur.com/a/*",
        "https://hitomi.la/doujinshi/*",
        "https://www.dlsite.com/maniax/work/*",
        "https://chan.sankakucomplex.com/?tags=*",
        "https://beta.sankakucomplex.com/?tags=*",
        "https://www.pixiv.net/users/*"
    ],

    "browser_action":{
        "default_popup":"popup/popup.html"
    },

    "icons":{
        "128":"imgs/icons/128.png",
        "48":"imgs/icons/48.png",
        "16":"imgs/icons/16.png"
    }
}